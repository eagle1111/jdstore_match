<div class="container">
  <div class="col-md-8">
    <h2> New Product </h2>

    <%= simple_form_for [:admin, @product] do |f| %>

    <%= render :partial => "form", :locals => { :f => f } %>
      <div class="group">
        <%= f.input :image, as: :file %>
      </div>
      <div class="group">
        <%= f.submit "Submit", data: { disable_with: "Submitting..." } , class: "btn btn-success" %>
      </div>
    <% end %>
  </div>
</div>
