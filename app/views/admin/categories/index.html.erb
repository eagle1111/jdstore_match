<h2> Category List </h2>
<div class="pull-right" style="padding-bottom: 20px;">
  <%= link_to("新增分类", new_admin_category_path, class: "btn btn-primary btn-sm") %>
</div>
<table class="table table-bordered">
  <thead>
    <tr>
      <th>#</th>
      <th>Name</th>

      <th width="100"> Options</th>
    </tr>
  </thead>
  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td>
          ＃
        </td>
        <td>
          <%= category.name %>
        </td>

        <td>
          <%= link_to("Edit", edit_admin_category_path(category)) %>
          <%= link_to admin_category_path(category), :method => :delete, :class => "btn btn-xs  btn-danger", :data => { :confirm => "Are you sure?" } do %><i class="fa fa-trash-o"></i><% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
    
